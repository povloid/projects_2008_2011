<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <display-name>A1</display-name>
    
    <servlet>
        <display-name>GroupOpration</display-name>
        <servlet-name>GroupOpration</servlet-name>
        <servlet-class>ips.dwh.datawork.groups.GroupOpration</servlet-class>
    </servlet>
    <servlet>
        <description>Операции с документами</description>
        <servlet-name>BoxesOpration</servlet-name>
        <servlet-class>ips.dwh.datawork.boxes.BoxesOperation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetBoxFile</servlet-name>
        <servlet-class>ips.dwh.datawork.boxpresent.GetBoxFile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CloseSession</servlet-name>
        <servlet-class>ips.dwh.session.CloseSession</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CopyToBuffer</servlet-name>
        <servlet-class>ips.dwh.buffer.CopyToBuffer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PasteFromBuffer</servlet-name>
        <servlet-class>ips.dwh.buffer.PasteFromBuffer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CloseSession</servlet-name>
        <url-pattern>/CloseSession</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetBoxFile</servlet-name>
        <url-pattern>/BoxPresent/GetBoxFile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GroupOpration</servlet-name>
        <url-pattern>/DataWork/Operations/GroupOpration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BoxesOpration</servlet-name>
        <url-pattern>/DataWork/Operations/BoxesOpration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CopyToBuffer</servlet-name>
        <url-pattern>/DataWork/Operations/CopyToBuffer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PasteFromBuffer</servlet-name>
        <url-pattern>/DataWork/Operations/PasteFromBuffer</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>Main.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>403</error-code>
        <location>/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error.jsp</location>
    </error-page>
    <security-constraint>
        <display-name>Constraint_for_All</display-name>
        <web-resource-collection>
            <web-resource-name>All_Resources</web-resource-name>
            <description/>
            <url-pattern>/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
            <http-method>HEAD</http-method>
            <http-method>PUT</http-method>
            <http-method>OPTIONS</http-method>
            <http-method>TRACE</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>ips_view</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>DWH_Edit_Constraint</display-name>
        <web-resource-collection>
            <web-resource-name>DWH_Operations</web-resource-name>
            <description/>
            <url-pattern>/DataWork/Operations/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
            <http-method>HEAD</http-method>
            <http-method>PUT</http-method>
            <http-method>OPTIONS</http-method>
            <http-method>TRACE</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>ips_dwh_edit</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name/>
        <form-login-config>
            <form-login-page>/login.html</form-login-page>
            <form-error-page>/login.html</form-error-page>
            </form-login-config>
        </login-config>
    <security-role>
        <description>Просто просмотр</description>
        <role-name>ips_view</role-name>
    </security-role>
    <security-role>
        <description>Роль для редактирования хранилища документов</description>
        <role-name>ips_dwh_edit</role-name>
    </security-role>
    <resource-ref>
        <res-ref-name>jdbc/ips_main</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    </web-app>
